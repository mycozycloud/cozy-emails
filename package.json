{ "name": "cozy-mails"
, "version": "0.0.1"
, "engine": { "node": "0.8.x" }
, "description": "A simple mail aggregator to backup your inbox and read efficiently your emails."
, "repository":
  {
    "type": "git"
  , "url": "https://github.com/mycozycloud/cozy-mails.git"
  }
, "main": "server.coffee"
, "dependencies":
  { "jade":             "= 0.28.2"
  , "express":          "= 3.0.0"
  , "connect":          "= 2.6.1"
  , "coffee-script":    "= 1.4.0"
  , "mime":             "= 1.2.7"
  , "qs":               "= 0.5.0"
  , "compound": "= 1.1.6"
  , "jugglingdb": "= 0.2.0-23"
  , "jugglingdb-cozy-adapter": "= 0.3.2"
  , "async":            "= 0.1.22"
  , "request":          "= 2.11.4"
  , "nodemailer":       "= 0.3.29"
  , "imap":             "= 0.7.7"
  , "mailparser":       "= 0.3.0"
  , "mimelib":		">= 0"
  , "request-json":     ">= 0"
  }
, "devDependencies":
  { "should":           "= 1.2.0"
  , "mocha":            "= 1.6.0"
  , "chai":             "= 1.3.0"
  , "request-json":     ">= 0"
  }
, "scripts":
  { "test": "cake tests"
  , "start": "coffee server.coffee"
  }
, "cozy-permissions":
  { "Mail":
    { "description": "Recovers and stores your mails."
    }
  , "MailBox":
    { "description": "Configures your mailboxes."
    }
  , "Attachment":
    { "description": "Recovers and stores attachments of your mails."
    }
  , "LogMessage":
    { "description": "Displays errors."
    }
  , "Account":
    { "description": "Encrypts your mailboxes passwords."
    }
  , "MailToBe":
    { "description": "Used for the first step in mails downloading."
    }
  }
}

